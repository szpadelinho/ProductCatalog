<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProductCatalog.MainWindow"
        Title="ProductCatalog">
    <StackPanel>
        <TextBox x:Name="SearchBar" Watermark="Wyszukaj produkt" TextChanged="SearchBar_OnTextChanged"/>
        <ComboBox x:Name="MyComboBox" SelectionChanged="MyComboBox_OnSelectionChanged">
            <ComboBoxItem Content="Wszystko"/>
            <ComboBoxItem Content="Elektronika"/>
            <ComboBoxItem Content="Narzędzia"/>
            <ComboBoxItem Content="Książki"/>
        </ComboBox>
        <ListBox x:Name="MyListBox"/>
    </StackPanel>
</Window>